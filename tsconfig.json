{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "paths": {
            "@main/*": ["app/src/ts/main/*"],
            "@renderer/*": ["app/src/ts/renderer/*"]
        }
    },
    "include": [
        "./app/src/ts/**/*"
    ]
}
